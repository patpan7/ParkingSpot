<!-- res/xml/custom_keyboard.xml -->
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="1px"
    android:keyHeight="60dp"
    android:keyWidth="14%p"
    android:verticalGap="1px"
    android:background="@drawable/keyboard_background">

    <!-- Πρώτη σειρά πλήκτρων - Κεντραρισμένη -->
    <Row>
        <Key
            android:codes="65"
            android:keyLabel="A"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="66"
            android:keyLabel="B"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="69"
            android:keyLabel="E"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="72"
            android:keyLabel="H"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="73"
            android:keyLabel="I"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="75"
            android:keyLabel="K"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="77"
            android:keyLabel="M"
            android:keyBackground="@drawable/key_background" />
    </Row>

    <!-- Δεύτερη σειρά πλήκτρων - Κεντραρισμένη -->
    <Row>
        <Key
            android:codes="78"
            android:keyLabel="N"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="79"
            android:keyLabel="O"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="80"
            android:keyLabel="P"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="84"
            android:keyLabel="T"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="88"
            android:keyLabel="X"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="89"
            android:keyLabel="Y"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="90"
            android:keyLabel="Z"
            android:keyBackground="@drawable/key_background" />
    </Row>

    <!-- Τρίτη σειρά πλήκτρων - Πλήρης -->
    <Row android:keyWidth="10%p"> <!-- Επαναφορά του πλήρους πλάτους -->
        <Key
            android:codes="49"
            android:keyLabel="1"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="50"
            android:keyLabel="2"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="51"
            android:keyLabel="3"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="52"
            android:keyLabel="4"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="53"
            android:keyLabel="5"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="54"
            android:keyLabel="6"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="55"
            android:keyLabel="7"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="56"
            android:keyLabel="8"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="57"
            android:keyLabel="9"
            android:keyBackground="@drawable/key_background" />
        <Key
            android:codes="48"
            android:keyLabel="0"
            android:keyBackground="@drawable/key_background" />
    </Row>

    <!-- Τέταρτη σειρά πλήκτρων - Παύλα, Κενό, Διαγραφή -->
    <Row>
        <Key
            android:codes="45"
            android:keyLabel="-"
            android:keyWidth="15%p"
            android:keyBackground="@drawable/key_background" /> <!-- Παύλα -->

        <Key
            android:codes="32"
            android:keyLabel="Space"
            android:keyWidth="70%p"
            android:keyBackground="@drawable/key_background" /> <!-- Κενό -->

        <Key
            android:codes="-1"
            android:keyIcon="@drawable/ic_delete"
            android:keyWidth="15%p"
            android:keyBackground="@drawable/key_background" /> <!-- Διαγραφή -->
    </Row>
</Keyboard>
